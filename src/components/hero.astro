---
// import { Picture } from "astro:assets";
import heroImage from "assets/hero2.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import { Image } from 'astro:assets';
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Image
      src={heroImage}
      alt="Quantle features"
      width="auto"
      format="png"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Financial markets made simple
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Quantle is an AI platform that helps everyday investors with analyzed financial news, stock data, portfolio insights, and customized market summaries - all in one place. <wbr /> 
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      {/*<Link
        href="#"
        href="https://web3templates.com/templates/astroship-starter-website-template-for-astro"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

         Download for Free
      </Link>*/}
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/quantle-io"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
         GitHub Organization
      </Link>
    </div>
  </div>
</main>
